<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.8" type="template" client="site">
    <name>Greenkey</name>
    <version>3.0</version>
    <creationDate>26.06.2018</creationDate>
    <author>Greenkey studio</author>
    <authorEmail>info@greenkey.ru</authorEmail>
    <copyright>Copyright (C) 2018 Greenkey studio, All rights reserved.</copyright>
    <description>TPL_GREENKEY3_XML_DESCRIPTION</description>
    <files>
        <filename>favicon.ico</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>index.php</filename>
        <filename>index.html</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>code</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>includes</folder>
        <folder>language</folder>
        <folder>media</folder>
        <folder>scss</folder>
        <folder>style</folder>
        <folder>vendor</folder>
    </files>
    <positions>
        <position>sidebar</position>
        <position>navigation</position>
        <position>debug</position>
        <position>header</position>
        <position>sub-header-1</position>
        <position>sub-header-2</position>
        <position>top</position>
        <position>search</position>
        <position>center-header</position>
        <position>center</position>
        <position>center-footer</position>
        <position>left</position>
        <position>right</position>
        <position>bottom</position>
        <position>footer</position>
        <position>sub-footer-1</position>
        <position>sub-footer-2</position>
        <position>sub-footer-3</position>
        <position>sub-footer-4</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_greenkey3.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_greenkey3.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_greenkey3.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_greenkey3.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="templateColor" class="" type="color" default="#08C"
                       label="TPL_GREENKEY3_COLOR_LABEL"
                       description="TPL_GREENKEY3_COLOR_DESC" />

                <field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
                       label="TPL_GREENKEY3_BACKGROUND_COLOR_LABEL"
                       description="TPL_GREENKEY3_BACKGROUND_COLOR_DESC" />

                <field name="logoFile" class="" type="media" default=""
                       label="TPL_GREENKEY3_LOGO_LABEL"
                       description="TPL_GREENKEY3_LOGO_DESC" />

                <field name="sitetitle"  type="text" default=""
                       label="JGLOBAL_TITLE"
                       description="JFIELD_ALT_PAGE_TITLE_LABEL"
                       filter="string" />

                <field name="sitedescription"  type="text" default=""
                       label="JGLOBAL_DESCRIPTION"
                       description="JGLOBAL_SUBHEADING_DESC"
                       filter="string" />

                <field name="googleFont"
                       type="radio"
                       class="btn-group"
                       default="1"
                       label="TPL_GREENKEY3_FONT_LABEL"
                       description="TPL_GREENKEY3_FONT_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="googleFontName" class="" type="text" default="Open+Sans"
                       label="TPL_GREENKEY3_FONT_NAME_LABEL"
                       description="TPL_GREENKEY3_FONT_NAME_DESC" />

                <field name="fluidContainer"
                       type="radio"
                       class="btn-group"
                       default="0"
                       label="TPL_GREENKEY3_FLUID_LABEL"
                       description="TPL_GREENKEY3_FLUID_DESC"
                >
                    <option value="0">TPL_GREENKEY3_STATIC</option>
                    <option value="1">TPL_GREENKEY3_FLUID</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
